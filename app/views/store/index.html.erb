<table class="table table-striped">
<H1>Your pragmatic catalog</H1>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag("/assets"+product.image_url, class: "img-rounded") %></td>
        <td>
        <dl>
          <dt><%= link_to product.title, product_path(product) %></dt>
          <dd><%= truncate(strip_tags(product.description), lenght: 120) %></dd>
        </dl>
      </td>
        
        <td><b>Price: <%= number_to_currency(product.price) %><b></td>
        <td><%= button_to 'Add to cart', line_items_path(product_id: product.id),
           class: 'btn btn-primary  btn-small', remote: true %>
        </td></td>
      </tr>
    <% end %>
  </tbody>
</table>


