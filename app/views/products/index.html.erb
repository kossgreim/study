<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag(product.image_url, class: "img-rounded") %></td>
        <td>
        <dl>
          <dt><%= link_to product.title, product_path(product) %></dt>
          <dd><%= truncate(strip_tags(product.description), lenght: 120) %></dd>
        </dl>
      </td>
        
        <td><b>Price: <%= product.price %><b></td>
        <td>
          <%= link_to  t('.edit', :default => t("helpers.links.edit")),
                      edit_product_path(product), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_product_path,
            :class => 'btn btn-primary' %>
